<div class="container">
  <div class="row">
    <div class="col">

      <h2>Tag Detail</h2>

      <p>
        <strong>ID:</strong>
        <%= @tag.id %>
      </p>

      <p>
        <strong>Title:</strong>
        <%= @tag.title %>
      </p>

      <p class="for-show">
        <strong>Color:</strong>
        <% unless @tag.color.blank? %>
          <%= @tag.color %>
        <div class="color-box" style="display: inline-block; background-color: <%= @tag.color %>;"></div>
      <% else %>
        no Color
      <% end %>
      </p>

      <p>
        <strong>Created At:</strong>
        <%= @tag.created_at.strftime('%d.%m.%Y - %H:%M') %>
      </p>

      <p>
        <strong>Updated At:</strong>
        <%= @tag.updated_at.strftime('%d.%m.%Y - %H:%M') %>
      </p>

      <%= link_to 'Edit', edit_tag_path(@tag), class: "btn btn-success" %>
      <%= link_to 'Back', settings_path(sort_by: "title"), class: "btn btn-primary" %>
    </div>
    <div class="col">

      <h3>Tasks:</h3>
      <p>
        <% if @tag.tasks.count.to_i == 0 %>
        <div class="alert alert-primary">
          <strong>There are no Tasks</strong>
        </div>
      <% else %>
        <% @tag.tasks.each do |task| %>
          <p><%= link_to 'Detail', task, class: "btn btn-dark btn-sm" %>
            <%= task.title %>.</p>
        <% end %>
      <% end %> </p>

    </div>

  </div>
</div>
