<p id="notice"><%= notice %></p>

<h2>Tags</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Color</th>
      <th>Color Code</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Tasks</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.title %></td>
        <td>
          <div class="color-box" style="background-color: <%= tag.color %>;"></div>
        </td>
        <td><%= tag.color %></td>
        <td><%= tag.created_at.strftime('%d.%m.%Y - %H:%M') %></td>
        <td><%= tag.updated_at.strftime('%d.%m.%Y - %H:%M') %></td>
        <td><%= tag.tasks.count.to_i %></td>
        <td>
          <%= link_to 'Detail', tag, class: "btn btn-dark" %></button>
        </td>
        <td>
          <%= link_to 'Edit', edit_tag_path(tag), class: "btn btn-success" %>
        </td>
        <td>
          <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Tag', new_tag_path, class: "btn btn-primary" %>

